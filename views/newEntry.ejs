<%- include('includes/header_main') %>

<body class="container">
<h2>Write a new entry</h2>
</div>
<form method="post" role="form" action="/new">
<div class="form-group">
<label for="author">Author</label>
<input type="text" class="form-control" id="author" name="author" placeholder="Enter a subject line" value="<%= username %>" required>
</div>
<div class="form-group">
<label for="subject">Subject</label>
<input type="text" class="form-control" id="subject"
name="subject" placeholder="Enter a subject line"
required>
</div>
<div class="form-group">
<label for="contents">Entry text</label>
<textarea class="form-control" id="contents" name="contents"
placeholder="Enter your comments here." rows="3"
required>
</textarea>
</div>
<div class="form-group">
<input type="submit" value="Post entry" class="btn btn-primary">
</div>
</form>

