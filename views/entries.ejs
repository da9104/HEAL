<%- include('includes/header_main') %>

<style>

.flex-column {
  margin: 0 auto;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.quickmenu .menu {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.menu li {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 5px;
}

ul li {
  margin: 0 auto;
  list-style: none;
  padding-right: 50px;
  text-align: center;
}

i {
  border-radius: 50px;
  border: 50px solid gray;
}

#avatar {
  margin: 0 auto;
}

#infoFloatingButton {
	position: fixed;
	bottom: 25px;
	right: 25px;
	width: 60px;
	height: 60px;
	background-color: #25d366;
	cursor: pointer;
	display: flex;
	justify-content: center;
	align-items: center;
	border-radius: 50%;
	z-index: 1000;
	animation: whatsappButtonAnimation 0.5s;
}
  
#infoFloatingButton svg {
	width: 36px;
	fill: #fff;
}
  
@-webkit-keyframes infoFloatingButton {
	0% {
		transform: scale3d(0, 0, 0);
		transition: transform 0.3s ease-in-out;
	}
	100% {
		transform: scale3d(1, 1, 1);
		transition: transform 0.5s cubic bezier(0.18, 0.89, 0.32, 1.28);
	}
}

@media screen and (max-width: 768px) {
	#infoFloatingButton {
		width: 36px;
		height: 36px;
	}

	#infoFloatingButton svg {
		width: 20px;
	}
}

#main-chat-icon {
  cursor: pointer;
  position: relative;
  top: 2px;
  right: 10px;
}

</style>

